# ==============================================
# LLM API Keys (Choose at least one)
# ==============================================
# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-xxx

# OpenAI
OPENAI_API_KEY=sk-xxx

# Google Gemini
GEMINI_API_KEY=xxx

# Default LLM Provider (claude | openai | gemini)
LLM_PROVIDER=claude

# LLM Options
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.7
# Uncomment to use a specific model
# LLM_MODEL=claude-sonnet-4-5-20250929

# ==============================================
# GitHub Configuration
# ==============================================
GITHUB_TOKEN=ghp_xxx
GITHUB_OWNER=your-username
GITHUB_REPO=your-repo

# ==============================================
# Runner Configuration
# ==============================================
# Working directory for workspace
WORK_DIR=/tmp/autonomous-coding-agents

# Task Configuration
MAX_CONCURRENT_TASKS=1
RETRY_ATTEMPTS=3
TASK_TIMEOUT=300000

# Maximum concurrent features to develop
MAX_CONCURRENT_FEATURES=3

# Maximum turns per feature
MAX_TURNS_PER_FEATURE=50

# Agent timeout in minutes
AGENT_TIMEOUT_MINUTES=240

# ==============================================
# Runner Feature Flags
# ==============================================
# Enable pre/post validation hooks (true | false)
ENABLE_VALIDATION=false

# Enable error learning via ReflexionPattern (true | false)
ENABLE_LEARNING=false

# Enable context management and optimization (true | false)
ENABLE_CONTEXT_MANAGEMENT=false

# Use real quality tools instead of LLM mock (true | false)
USE_REAL_QUALITY_TOOLS=false

# ==============================================
# Logging
# ==============================================
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_DIR=./logs

# ==============================================
# Development
# ==============================================
NODE_ENV=development
