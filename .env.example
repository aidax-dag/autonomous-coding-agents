# ==============================================
# LLM API Keys (Choose at least one)
# ==============================================
# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-xxx

# OpenAI
OPENAI_API_KEY=sk-xxx

# Google Gemini
GEMINI_API_KEY=xxx

# Default LLM Provider (claude | openai | gemini)
LLM_PROVIDER=claude

# ==============================================
# GitHub Configuration
# ==============================================
# Personal Access Token or GitHub App
GITHUB_TOKEN=ghp_xxx

# GitHub Owner (username or organization)
GITHUB_OWNER=your-username

# Default repository (optional)
GITHUB_REPO=your-repo

# ==============================================
# Message Broker (NATS)
# ==============================================
NATS_URL=nats://localhost:4222

# ==============================================
# Database (PostgreSQL)
# ==============================================
DATABASE_URL=postgresql://multi_agent:password@localhost:5432/multi_agent_db

# ==============================================
# Agent Configuration
# ==============================================
# Auto-merge approved PRs (true | false)
AUTO_MERGE_ENABLED=false

# Require human approval before actions (true | false)
HUMAN_APPROVAL_REQUIRED=true

# Maximum concurrent features to develop
MAX_CONCURRENT_FEATURES=3

# Agent timeout in minutes
AGENT_TIMEOUT_MINUTES=240

# Maximum turns per feature
MAX_TURNS_PER_FEATURE=50

# ==============================================
# Notifications (Optional)
# ==============================================
# Slack
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx

# Discord
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/xxx

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
NOTIFICATION_EMAIL=notifications@example.com

# ==============================================
# Logging
# ==============================================
# Log level (debug | info | warn | error)
LOG_LEVEL=info

# Log to file (true | false)
LOG_TO_FILE=true

# Log directory
LOG_DIR=./logs

# ==============================================
# Development
# ==============================================
NODE_ENV=development
PORT=3000
