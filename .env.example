# ==============================================
# LLM API Keys (Choose at least one)
# ==============================================
# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-xxx

# OpenAI
OPENAI_API_KEY=sk-xxx

# Google Gemini
GEMINI_API_KEY=xxx

# Default LLM Provider (claude | openai | gemini)
LLM_PROVIDER=claude

# ==============================================
# GitHub Configuration
# ==============================================
# Personal Access Token or GitHub App
GITHUB_TOKEN=ghp_xxx

# GitHub Owner (username or organization)
GITHUB_OWNER=your-username

# Default repository (optional)
GITHUB_REPO=your-repo

# ==============================================
# Message Broker (NATS)
# ==============================================
NATS_URL=nats://localhost:4222

# ==============================================
# Database (PostgreSQL)
# ==============================================
DATABASE_URL=postgresql://multi_agent:password@localhost:5432/multi_agent_db

# ==============================================
# Agent Configuration
# ==============================================
# Agent IDs (for multi-instance deployments)
# AGENT_ID=coder-1
# AGENT_NAME=Coder Agent

# Task Configuration
MAX_CONCURRENT_TASKS=1
RETRY_ATTEMPTS=3
TASK_TIMEOUT=300000

# CI/CD Integration (Feature F4.1)
MIN_COVERAGE=80
CI_CHECK_TIMEOUT=600000
CI_POLL_INTERVAL=10000

# GitHub Webhook Support (Feature F4.2)
WEBHOOK_ENABLED=true
WEBHOOK_PORT=3001
WEBHOOK_HOST=0.0.0.0
WEBHOOK_PATH=/webhook
WEBHOOK_SECRET=your-webhook-secret-here

# Working Directory
WORK_DIR=/tmp/autonomous-coding-agents

# Auto-merge approved PRs (true | false)
AUTO_MERGE_ENABLED=false

# Require human approval before actions (true | false)
HUMAN_APPROVAL_REQUIRED=true

# Maximum concurrent features to develop
MAX_CONCURRENT_FEATURES=3

# Agent timeout in minutes
AGENT_TIMEOUT_MINUTES=240

# Maximum turns per feature
MAX_TURNS_PER_FEATURE=50

# LLM Options
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.7
# Uncomment to use a specific model
# LLM_MODEL=claude-sonnet-4-5-20250929

# ==============================================
# Notifications (Optional)
# ==============================================
# Enable notifications (true | false)
NOTIFICATIONS_ENABLED=false

# Notification level (info | warning | error)
# Only notifications at or above this level will be sent
NOTIFICATION_LEVEL=info

# Rate limit: max notifications per minute
NOTIFICATION_RATE_LIMIT=60

# Comma-separated list of events to notify about (leave empty for all events)
# Available events: task.created, task.started, task.completed, task.failed,
#                   pr.created, pr.approved, pr.merged, pr.rejected,
#                   review.started, review.completed, review.requested_changes,
#                   agent.error, system.error, agent.unhealthy, agent.recovered
# NOTIFICATION_EVENTS=task.completed,task.failed,pr.merged,agent.error

# Slack Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx
# SLACK_CHANNEL=#notifications
# SLACK_USERNAME=Multi-Agent System
# SLACK_ICON_EMOJI=:robot_face:

# Discord Configuration
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/xxx
# DISCORD_USERNAME=Multi-Agent System
# DISCORD_AVATAR_URL=https://example.com/avatar.png

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_SECURE=true
NOTIFICATION_EMAIL_FROM=notifications@example.com
NOTIFICATION_EMAIL_TO=admin@example.com,team@example.com

# ==============================================
# Logging
# ==============================================
# Log level (debug | info | warn | error)
LOG_LEVEL=info

# Log to file (true | false)
LOG_TO_FILE=true

# Log directory
LOG_DIR=./logs

# ==============================================
# Health Server
# ==============================================
HEALTH_PORT=3000
HEALTH_HOST=0.0.0.0

# ==============================================
# Development
# ==============================================
NODE_ENV=development
PORT=3000
