{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://aca.local/schemas/ticket.schema.json",
  "title": "ACA Ticket",
  "description": "Ticket-based working cycle schema for planning, execution, verification, and review",
  "type": "object",
  "required": [
    "ticketId",
    "managementNumber",
    "title",
    "background",
    "problem",
    "workDescription",
    "expectedArtifacts",
    "verification",
    "createdAt",
    "status",
    "createdBy"
  ],
  "properties": {
    "ticketId": { "type": "string", "minLength": 1 },
    "managementNumber": { "type": "string", "minLength": 1 },
    "title": { "type": "string", "minLength": 1 },
    "background": { "type": "string", "minLength": 1 },
    "problem": { "type": "string", "minLength": 1 },
    "workDescription": { "type": "string", "minLength": 1 },
    "expectedArtifacts": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "type", "description"],
        "properties": {
          "name": { "type": "string", "minLength": 1 },
          "type": { "type": "string", "minLength": 1 },
          "description": { "type": "string", "minLength": 1 }
        },
        "additionalProperties": false
      }
    },
    "verification": {
      "type": "object",
      "required": ["method", "conditions", "checklist"],
      "properties": {
        "method": { "type": "string", "minLength": 1 },
        "conditions": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        },
        "checklist": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        }
      },
      "additionalProperties": false
    },
    "status": {
      "type": "string",
      "enum": ["created", "in_progress", "pending", "reviewing", "completed", "cancelled"]
    },
    "createdAt": { "type": "string", "format": "date-time" },
    "updatedAt": { "type": "string", "format": "date-time" },
    "startedAt": { "type": "string", "format": "date-time" },
    "endedAt": { "type": "string", "format": "date-time" },
    "createdBy": {
      "type": "object",
      "required": ["agentId", "role"],
      "properties": {
        "agentId": { "type": "string", "minLength": 1 },
        "role": { "type": "string", "enum": ["planner", "executor", "reviewer", "human"] }
      },
      "additionalProperties": false
    },
    "assignees": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["agentId", "role"],
        "properties": {
          "agentId": { "type": "string", "minLength": 1 },
          "role": { "type": "string", "enum": ["planner", "executor", "reviewer"] }
        },
        "additionalProperties": false
      }
    },
    "artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "url", "kind"],
        "properties": {
          "name": { "type": "string", "minLength": 1 },
          "url": { "type": "string", "format": "uri" },
          "kind": { "type": "string", "minLength": 1 }
        },
        "additionalProperties": false
      }
    },
    "issues": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["message", "createdAt"],
        "properties": {
          "message": { "type": "string", "minLength": 1 },
          "severity": { "type": "string", "enum": ["low", "medium", "high", "critical"] },
          "createdAt": { "type": "string", "format": "date-time" }
        },
        "additionalProperties": false
      }
    },
    "reviews": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["reviewerId", "decision", "comment", "updatedAt"],
        "properties": {
          "reviewerId": { "type": "string", "minLength": 1 },
          "decision": { "type": "string", "enum": ["approved", "changes_requested"] },
          "comment": { "type": "string", "minLength": 1 },
          "updatedAt": { "type": "string", "format": "date-time" }
        },
        "additionalProperties": false
      }
    },
    "externalRefs": {
      "type": "object",
      "properties": {
        "githubIssue": { "type": "string" },
        "githubProjectItem": { "type": "string" },
        "jiraIssue": { "type": "string" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
