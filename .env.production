# ==============================================
# Production Environment Configuration
# ==============================================
# Copy to .env and fill in actual values before deploying.
# NEVER commit actual secrets to version control.

NODE_ENV=production

# ==============================================
# LLM API Keys (set via secrets manager)
# ==============================================
# ANTHROPIC_API_KEY=  # Set via CI/CD secrets or vault
# OPENAI_API_KEY=     # Set via CI/CD secrets or vault
# GEMINI_API_KEY=     # Set via CI/CD secrets or vault
LLM_PROVIDER=claude

# LLM Options
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.3

# ==============================================
# GitHub Configuration (set via secrets manager)
# ==============================================
# GITHUB_TOKEN=       # Set via CI/CD secrets or vault

# ==============================================
# Runner Configuration
# ==============================================
WORK_DIR=/data/workspace
MAX_CONCURRENT_TASKS=5
RETRY_ATTEMPTS=3
TASK_TIMEOUT=600000
MAX_CONCURRENT_FEATURES=3
MAX_TURNS_PER_FEATURE=100
AGENT_TIMEOUT_MINUTES=480

# ==============================================
# Runner Feature Flags
# ==============================================
ENABLE_VALIDATION=true
ENABLE_LEARNING=true
ENABLE_CONTEXT_MANAGEMENT=true
USE_REAL_QUALITY_TOOLS=true

# ==============================================
# Multi-Model Routing
# ==============================================
ROUTING_ENABLED=true
ROUTING_BUDGET_LIMIT=50.00

# ==============================================
# Logging
# ==============================================
LOG_LEVEL=warn
LOG_TO_FILE=true
LOG_DIR=/data/logs

# ==============================================
# Web Dashboard
# ==============================================
DASHBOARD_PORT=3000
DASHBOARD_HOST=0.0.0.0
CORS_ENABLED=true
CORS_ORIGINS=https://dashboard.example.com
